afficher(w,X,Y,a):- send(a, display, new(@c, circle(25)), point(25*X,25*Y)),
                      send(@c, fill_pattern, colour(white)).
afficher(b,X,Y,a):- send(a, display, new(@c, circle(25)), point(25*X,25*Y)),
                      send(@c, fill_pattern, colour(black)).
afficher(e,X,Y).
			
			


